// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pixels {
  id                Int @id @default(autoincrement())
  insertedAt        DateTime @default(now())
  updatedAt         DateTime @default(now())
  ownerAddress      String
  tokenId           Int @unique
}

// @next-add a uploadedBy column here and require users to sign the payload
// when they are uploading to this table
model Media {
    id              Int @id @default(autoincrement())
    s3Id            String @unique
    s3filename      String
    fileSize        Int
    mimetype        String
    insertedAt      DateTime @default(now())
    updatedAt       DateTime @default(now())
}
